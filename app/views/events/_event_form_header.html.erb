<% if flash.notice.present? %>
  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <h3 style="border: 0; margin-bottom: 0;"><strong>Notice:</strong> <%= flash.notice %></h3>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    </div>
  </div>
<% end %>

<% if @event && @event.errors.any? %>
  <div class="row">
    <div class="col-md-12">
      <div class="error_messages alert alert-warning" role="alert">
        <h2>Problem:</h2>
        <ul>
          <% for message in @event.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
          <% for message in @event.event_time_error_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
